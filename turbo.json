{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "BACKEND_URL",
    "NEXT_PUBLIC_BACKEND_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "BACKEND_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "NEXT_PUBLIC_DOMAIN"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "dependsOn": ["^start"],
      "persistent": true,
      "cache": false
    }
  }
}