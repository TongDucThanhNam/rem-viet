{
  "swagger": "2.0",
  "info": {
    "verson": "1.0.0",
    "title": "E-commerce API",
    "description": "API documentation for E-commerce",
    "version": "1.0.0"
  },
  "host": "localhost:3001/api",
  "basePath": "/",
  "tags": [
    {
      "name": "Products",
      "description": "Endpoints related to products"
    }
  ],
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "Please enter JWT or API Key with Bearer into field"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/product": {
      "post": {
        "tags": [
          "Products"
        ],
        "description": "API to create product",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Product information",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "string"
                },
                "description": {
                  "type": "string",
                  "example": "string"
                },
                "size": {
                  "type": "array",
                  "example": [
                    30,
                    30,
                    10
                  ],
                  "items": {
                    "type": "number"
                  }
                },
                "variants": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "price": {
                        "type": "number",
                        "example": 110
                      },
                      "quantity": {
                        "type": "number",
                        "example": 5
                      },
                      "attributes": {
                        "type": "object",
                        "properties": {
                          "color": {
                            "type": "string",
                            "example": "blue"
                          },
                          "size": {
                            "type": "string",
                            "example": "L"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "API to get all products",
        "parameters": [
          {
            "name": "query",
            "page": 1,
            "limit": 10,
            "in": "query",
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/product/{productId}": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "API to get product by id",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Product Id",
            "example": "66e6a3aaa0a8d5be45d8f572"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Product found"
                },
                "statusCode": {
                  "type": "number",
                  "example": 200
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "productId": {
                      "type": "string",
                      "example": "66e6a3aaa0a8d5be45d8f572"
                    },
                    "name": {
                      "type": "string",
                      "example": "Product1"
                    },
                    "description": {
                      "type": "string",
                      "example": "daedak"
                    },
                    "size": {
                      "type": "array",
                      "example": [
                        30,
                        30,
                        10
                      ],
                      "items": {
                        "type": "number"
                      }
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "CreateProductRequest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "string"
        },
        "description": {
          "type": "string",
          "example": "string"
        },
        "size": {
          "type": "array",
          "example": [],
          "items": {}
        },
        "variants": {
          "type": "array",
          "example": [],
          "items": {}
        }
      }
    }
  }
}