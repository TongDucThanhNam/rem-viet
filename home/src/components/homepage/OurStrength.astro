---
import {YouTube} from '@astro-community/astro-embed-youtube';
import React from "react";
import {our_strength} from "@/config/site";
---

<div class="w-full h-full flex items-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto w-full">
        <div class="lg:flex lg:items-center lg:justify-between">
            <div class="w-full lg:w-1/2 lg:pr-8 mb-8 lg:mb-0">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold leading-tight mb-4">
                    {our_strength.title}
                </h2>
                <div class="space-y-4 mb-6">
                    {our_strength.content.map((content: any, index) => (
                            <p class="text-base sm:text-lg leading-relaxed">
                                {content.text}
                            </p>
                    ))}
                </div>
                <div class="pt-2">
                    <a
                            class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition duration-150 ease-in-out"
                            href="/"
                    >
                        {our_strength.button}
                    </a>
                </div>
            </div>
            <div class="w-full lg:w-1/2">
                <div class="aspect-w-16 aspect-h-9">
                    <YouTube
                            params="controls=1"
                            playlabel="Watch video"
                            id={our_strength.video}
                    />
                </div>
            </div>
        </div>
    </div>
</div>