---
import {TextGenerateEffect} from "@/components/animation/text-generate-effect";
import {Button} from "@nextui-org/button";
import {heroSection} from "@/config/site";
import {Link} from "@nextui-org/react";
import {Image} from "astro:assets"
import heroimage from "../../../public/HeroImage.webp"
---

<div class="max-w-screen relative overflow-hidden">
    <div class="container mx-auto py-12 sm:px-6 lg:px-8 lg:py-16">
        <div class="flex flex-col items-center text-center justify-center lg:flex-row lg:text-left">
            <div class="flex flex-col text-center items-center justify-center">
                <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
                    {heroSection.hello}
                    <br/>
                    <span class="text-primary">{heroSection.title}</span>
                </h1>
                <div class="mt-3 sm:mx-auto sm:mt-5 sm:max-w-xl sm:text-lg md:mt-5 md:text-xl lg:mx-0">
                    <TextGenerateEffect client:load words={heroSection.description}/>
                </div>
                <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                    <Button as={Link} className="w-full sm:w-auto" color="primary" href="/#newsletter">
                        Tư vấn ngay
                    </Button>
                    <Button as={Link} className="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-3" color="secondary"
                            href="https://luoichongmuoi.shop/#danh-sach-san-pham">
                        Xem danh sách sản phẩm
                    </Button>
                </div>
            </div>
            <div class="mt-10 lg:mt-0">
                <div class="h-[400px] w-[400px]">
                    <Image
                            loading="eager"
                            fetchpriority="high"
                            src={heroimage}
                            width={heroimage.width / 2}
                            alt="hero"
                            sizes="(max-width: 600px) 100vw, (max-width: 1200px) 50vw, 400px"
                            densities={[0.1, 0.2, 0.3]}
                    />
                </div>
            </div>
        </div>
    </div>
</div>